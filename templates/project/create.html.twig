{% extends 'base.html.twig' %}

{% block title %}Créer un Projet
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Créer un nouveau Projet</h1>
	</div>

	<form id="regForm" action="{{ path('app_project_create') }}" method="post">
		<div class="row setup-content" id="step-1">
			<div class="col-xs-6 col-md-offset-3">
				<div class="col-md-12">
					<h3>Informations du Projet</h3>
					{{ form_row(form.num_dossier) }}
					{{ form_row(form.titreFr) }}
					{{ form_row(form.titreDe) }}
					{{ form_row(form.titreEn) }}
					{{ form_row(form.type_project) }}
				</div>
			</div>
		</div>
		<div class="row setup-content" id="step-2">
			<div class="col-xs-6 col-md-offset-3">
				<div class="col-md-12">
					<h3>Choix de la discipline</h3>
					<div class="row">
						<div
							class="col-md-6">{# 
																																					 #}
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="row setup-content" id="step-3">
			<div class="col-xs-6 col-md-offset-3">
				<div class="col-md-12">
					<h3>Information des Porteurs de Projet</h3>
					<div class="row">
						<div
							class="col-md-6"><!-- Ajoute tes champs ici -->
						</div>
					</div>
					<button class="btn btn-success btn-lg pull-right" type="submit">{{ button_label|default('Enregistrer') }}</button>
				</div>
			</div>
		</div>
		{{ form_widget(form) }}
	</form>
{% endblock %}
