{% extends 'base.html.twig' %}

{% block title %}Manifestation{% endblock %}

{% block body %}
    <h1>Manifestation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ manifestation.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ manifestation.titre }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{ manifestation.dateDebut ? manifestation.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ manifestation.dateFin ? manifestation.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ manifestation.duree }}</td>
            </tr>
            <tr>
                <th>Justification de la durée</th>
                <td>{{ manifestation.justificationDuree }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary prevBtn btn-lg pull-left mg-r-2" href="{{ path('app_manifestation_index') }}">retour</a>

    <a class="btn btn-secondary prevBtn btn-lg pull-left" href="{{ path('app_manifestation_edit', {'id': manifestation.id}) }}">modifier</a>

    {{ include('manifestation/_delete_form.html.twig') }}
{% endblock %}
